<header>
   <nav class="navbar navbar-expand-lg navbar-light bg-dark">
      <a class="navbar-brand" href="/">Shopping Cart</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
         aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
         <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
               <a class="nav-link" href="/"> Products <span class="sr-only">(current)</span></a>
            </li>
            {{#if loggedinUser}}
            <li class="nav-item">
               <a class="nav-link" href="/cart">Cart <sup class="badge badge-success">{{cartTagCount}}</sup> </a>
            </li>
            <li class="nav-item">
               <a class="nav-link" href="/orders">Orders</a>
            </li>
            {{/if}}
         </ul>
         <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" tabindex="1" type="button" id="dropdownMenuButton"
               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
               {{#if loggedinUser}}
               {{ loggedinUser.name }}
            </button>
            <div class="dropdown-menu bg-dark" aria-labelledby="dropdownMenuButton">
               <a class="dropdown-item text-light" href="/account/Account">Account</a>
               <a class="dropdown-item text-light" href="/account/logout">Logout</a>
            </div>
            {{else}}
            Account
            </button>
            <div class="dropdown-menu bg-dark" aria-labelledby="dropdownMenuButton">
               <a class="dropdown-item text-light" href="/account/login">Login</a>
            </div>
            {{/if}}
         </div>
      </div>
   </nav>
</header>