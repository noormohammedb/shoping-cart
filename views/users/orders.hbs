<section>
   <div class="container mt-3 pt-3">
      <div class="row text-center justify-content-center">
         <p class="display-4 text-info font-weight-bold">Orders</p>
      </div>
      <div class="row">
         <table class="table table-hover table-dark table-responsive-sm">
            <thead>
               <tr>
                  <th scope="col">#</th>
                  <th scope="col">Picture</th>
                  <th scope="col">Product Name</th>
                  <th scope="col">Price</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Description</th>
                  <th scope="col">Status</th>
               </tr>
            </thead>
            <tbody>
               {{#each products}}
               <tr>
                  <th scope="row">{{@index}}</th>
                  <td> <img src="/uploaded/{{this.product.image}}" alt="" style="height: 50px; width: auto;"> </td>
                  <td> {{this.product.product_name}} </td>
                  <td> {{this.product.price}} </td>
                  <td> {{this.quantity}} </td>
                  <td> {{this.product.description}} </td>
                  <td>
                     <p>lorem</p>
                  </td>
               </tr>
               {{/each}}
            </tbody>
         </table>
      </div>
   </div>
</section>