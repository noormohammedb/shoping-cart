<section>
   <div class="container mt-3">
      <div class="row mb-3">
      </div>
      <div class="row">
         <table class="table table-hover table-dark table-responsive-sm">
            <thead>
               <tr>
                  <th scope="col">#</th>
                  <th scope="col">OrderId</th>
                  <th scope="col">UserId</th>
                  <th scope="col">products</th>
                  <th scope="col">Total Price</th>
                  <th scope="col">Date and Time</th>
                  <th scope="col">payment Status</th>
                  <th scope="col">view Order</th>
               </tr>
            </thead>
            <tbody>
               {{#each orders}}
               <tr>
                  <th scope="row">{{@index}}</th>
                  <td> {{this._id}} </td>
                  <td> {{this.userId}} </td>
                  {{!-- <td> {{this.products.length}} </td> --}}
                  <td> {{#each this.products}}{{this.quantity}}| {{/each}} </td>
                  <td> {{this.totalAmount}} </td>
                  <td>
                     {{this.date}}
                     <hr>
                     {{this.time}}
                  </td>
                  <td> {{this.paymentStatus}} </td>
                  <td>
                     <a href="/admin/orders/{{this._id}}" class="btn btn-primary mr-3"> View </a>
                     {{!-- <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger ml-3"
                        onclick="return confirm('Are You sure Want To Delete {{ this.product_name }}')">Delete </a> --}}
                  </td>
               </tr>
               {{/each}}
            </tbody>
         </table>
      </div>
   </div>
</section>